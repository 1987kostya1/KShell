<Window x:Class="KShell.Windows.FileExplorer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:KShell.Windows"
        mc:Ignorable="d"
        Title="FileExplorer" Height="450" Width="800">
    <DockPanel Background="#151520">
        <ListBox Name="ListBoxFiles" ItemsSource="{Binding FilesCollection}"  Margin="0,68,0,0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel PreviewMouseDown="UIElement_OnPreviewMouseDown">
                        <Image Source="{Binding FileThumbnail}" Width="100" Height="100" Stretch="Uniform" Margin="15" Cursor="Hand"/>
                        <TextBlock Text="{Binding FileName}" HorizontalAlignment="Center" FontFamily="Arial"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel IsItemsHost="True" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
    </DockPanel>
</Window>
